---
import DesktopLogo from '../logo/Desktop.astro'
---

<ul class="desktop-nav">
  <li data-path="home"><a href="/">Home</a></li>
  <li data-path="sourcing"><a href="/sourcing">Sourcing</a></li>

  <li class="logo">
    <DesktopLogo />
  </li>

  <li data-path="order"><a href="https://bornyesterdaybakery.square.site/">Order</a></li>
  <li data-path="contact"><a href="/contact">Contact</a></li>
</ul>

<style>
  .desktop-nav {
    display: none;
  }

  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 2rem;
    }
  }

  .desktop-nav li {
    transition: all var(--transition-normal);
  }

  .desktop-nav li:hover {
    color: var(--color-primary);
  }

  .logo {
    display: none;
  }

  @media (min-width: 1024px) {
    .logo {
      display: block;
    }
  }
</style>
