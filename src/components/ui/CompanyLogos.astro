---
import { Picture } from 'astro:assets'
import fareShareFood from '../../assets/fare-share-food.webp'
import geminiCafe from '../../assets/gemini-cafe.webp'
import morningGloryFarm from '../../assets/morning-glory-farm.png'
import mountainSocial from '../../assets/mountain-social.webp'
import newSpokeFarm from '../../assets/new-spoke-farm.png'
import spiceAndGrain from '../../assets/spice-and-grain.png'

const companyData = [
  {
    name: 'Mountain Social Kitchen & Bar',
    url: 'https://www.socialbarharbor.com/mountain-social-bethel',
    logo: mountainSocial,
  },
  {
    name: 'Fare Share Food Co-op',
    url: 'https://www.faresharecoop.org/',
    logo: fareShareFood,
  },
  {
    name: 'Spice & Grain',
    url: 'https://spiceandgrain.net/',
    logo: spiceAndGrain,
  },
  {
    name: 'Gemini Cafe',
    url: 'https://www.thegeminicafe.com/',
    logo: geminiCafe,
  },
  {
    name: 'Local Food Connection',
    url: 'https://www.facebook.com/groups/bethelmefood/',
    logo: null,
  },
  {
    name: 'New Spoke Farm',
    url: 'https://www.newspokefarm.com/the-csa',
    logo: newSpokeFarm,
  },
  {
    name: 'Morning Glory Farm',
    url: 'https://www.morninggloryfarmmaine.com/',
    logo: morningGloryFarm,
  },
]
---

<div class="company-logos">
  {
    companyData.map((company) => {
      if (company.logo) {
        return (
          <div class="logo">
            <a
              href={company.url}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={company.name}
            >
              <Picture src={company.logo} formats={['avif', 'webp']} alt={company.name} />
            </a>
          </div>
        )
      } else {
        return (
          <div class="logo no-logo">
            <a
              href={company.url}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={company.name}
            >
              {company.name}
            </a>
          </div>
        )
      }
    })
  }
</div>

<style>
  .company-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 6rem;
    padding: 1rem 0;
  }

  .logo {
    width: 9rem;
    height: 9rem;
    border-radius: 50%;
    transition: var(--transition-normal);
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo:nth-of-type(2) {
    background-color: #000000;
  }
  .logo:nth-of-type(3) {
    background-color: #44b0c4;
  }
  .logo:nth-of-type(6) {
    background-color: #000000;
  }

  .logo.no-logo {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-family: var(--font-bobby-soft);
    background-color: var(--color-secondary);
  }

  .logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
</style>
