---
import breadSunflowerImage from '../assets/bread-sunflower.jpeg'
import HeroBanner from '../components/ui/HeroBanner.astro'
import SectionHeader from '../components/text/SectionHeader.astro'
import Button from '../components/ui/Button.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout
  title="Born Yesterday Bakery | Success"
  description="Born Yesterday Bakery is a bakery located in Maine, specializing in sourdough bread"
>
  <HeroBanner title="Success" image={breadSunflowerImage} />
  <main>
    <section id="success" class="success lsa no-repeat">
      <SectionHeader
        title="Thank you for your message"
        description="We will get back to you as soon as we can!"
      />
      <Button text="Back to home" isLink={true} href="/" class="button-custom" />
    </section>
  </main>
</Layout>

<style>
  .success p {
    margin-bottom: 2rem;
  }

  .success .button-custom {
    display: block;
    max-width: fit-content;
    margin: 0 auto;
  }
</style>
