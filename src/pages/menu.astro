import Button from '../components/ui/Button.astro'
import Layout from '../layouts/Layout.astro'

// Can these be imported from Square?
const menuItems = {
  bread: [
    {
      name: 'Spelt Country Batard',
      price: '$9',
    },
    {
      name: 'Anadama Batard',
      price: '$9',
    },
    {
      name: 'Cheddar Boule',
      price: '$10',
    },
    {
      name: 'Whole Wheat Sandwich Pullman',
      price: '$8.50',
    },
    {
      name: 'Honey Multigrain Pullman',
      price: '$11',
    },
    {
      name: 'Sprouted Rye Pullman',
      price: '$11',
    },
    {
      name: 'Milk Pullman',
      price: '$10',
    },
    {
      name: 'Marble Rye Pullman',
      price: '$9.50',
    },
    {
      name: 'Tavola',
      price: '$9',
    },
    {
      name: 'Milk Buns 6pk',
      price: '$6.50',
    },
    {
      name: 'Demi-Baguette or Epi',
      price: '$4 - $4.50',
    },
    {
      name: 'Seasonal Veg Focaccia',
      price: '4x4" slice $6 / Full 9x12" $24',
    },
    {
      name: 'Sourdough Frozen Pizza Dough',
      price: '$4.50',
    },
  ],
  pastries: [
    {
      name: 'Sourdough Chocolate Chip Cookie',
      price: '$3',
    },
    {
      name: 'Ginger Molasses Cookie',
      price: '$3',
    },
    {
      name: 'Rotating Galette',
      price: '$6',
